@using Data.Models
@{
    bool isAdmin = User.IsInRole("Admin") || User.IsInRole("NLO");
    var statusTypes = ViewBag.StatusTypes as List<StatusType>;

    if (!isAdmin)
    {
        statusTypes = statusTypes.Where(st => st.StatusTypeId != "BlackListed" && st.StatusTypeId != "Pending").ToList();
    }
}
<div class="modal fade" id="updateJobStatusModal" tabindex="-1" role="dialog" aria-labelledby="updateJobStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-2xl font-bold text-[#7A1515]" id="updateJobStatusModalLabel">Update Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeUpdateJobStatusModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body max-h-[calc(96vh-200px)] flex-grow overflow-y-auto">
                <form id="updateJobStatusForm" class="rounded-lg p-2">
                    @Html.AntiForgeryToken()
                    <div class="space-y-6">
                        <div class="flex-1">
                            <label class="block text-sm font-medium text-gray-700">Status Type</label>
                            <select class="block w-full rounded-lg border border-gray-300 p-2 text-sm" id="updateJobStatus" name="statusTypeId">
                                @foreach (var status in statusTypes)
                                {
                                    <option value="@status.StatusTypeId">@status.Name</option>
                                }
                            </select>
                            <span id="updateJobStatusValidation" class="text-sm text-red-500"></span>
                        </div>
                    </div>
                    <input id="updateJobStatusJobId" name="jobId" type="hidden"/>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="rounded-md bg-[#6c757d] px-3 py-2 font-medium text-white hover:bg-[#939BA2]" id="cancelUpdateJobStatus" data-dismiss="modal">Cancel</button>
                <button type="submit" class="rounded-md bg-[#7A1515] px-3 py-2 font-medium text-white hover:bg-[#A53D3D]" onclick="submitUpdateJobStatus()">Update</button>
            </div>
        </div>
    </div>
</div>
