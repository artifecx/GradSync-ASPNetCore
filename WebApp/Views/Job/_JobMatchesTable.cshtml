@model List<Data.Models.JobApplicantMatch>


<div class="w-full overflow-auto rounded-lg border border-gray-200 bg-white p-6">
    <table class="min-w-full overflow-auto bg-white">
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="px-6 py-4 text-center text-[#625f5f]">No Job Matches</td>
            </tr>
        }
        else
        {
            <thead class="border-0 sticky rounded-md bg-gray-100 text-sm">
                <tr>
                    <th class="w-2/5 px-6 py-3 text-left uppercase tracking-wider text-[#625f5f]">Applicant</th>
                    <th class="w-2/5 px-6 py-3 text-left uppercase tracking-wider text-[#625f5f]">Match</th>
                    <th class="w-1/5 px-6 py-3 text-left uppercase tracking-wider text-[#625f5f]"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {                         
                    <tr class="border-b text-sm text-[#343131] hover:bg-gray-50">
                        <td class="flex flex-col whitespace-nowrap px-6 py-4 hover:cursor-default">
                            <div class="font-medium text-[#A04747]">
                                @item.User.User.FirstName @item.User.User.LastName
                            </div>
                            <div class="font-light">
                                @item.User.User.Email
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-6 py-4 font-medium text-[#625f5f] hover:cursor-default">
                            @item.MatchPercentage %
                        </td>
                        <td class="whitespace-nowrap px-6 py-4 text-[#625f5f]">
                            <a href="#"
                               class="view-details font-semibold hover:!no-underline hover:text-[#A04747]"
                               data-id="@item.UserId">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>