@model Services.ServiceModels.JobViewModel
@using Data.Models;

@{
    var EmploymentTypes = ViewBag.EmploymentTypes as List<EmploymentType>;
    var SetupTypes = ViewBag.WorkSetups as List<SetupType>;
    var YearLevels = ViewBag.YearLevels as List<YearLevel>;
    var Departments = ViewBag.Departments as List<Department>;
    var Skills = ViewBag.Skills as List<Skill>;
}

<div class="modal fade" id="createJobModal" tabindex="-1" role="dialog" aria-labelledby="createJobModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <form id="createJobForm" method="post" action="@Url.Action("CreateJob", "Job")" class="bg-white p-6 rounded-lg shadow-lg">
                <div class="modal-header border-b-0">
                    <h5 class="modal-title text-xl font-semibold" id="createJobModalLabel">Create Job</h5>
                    <button type="button" class="text-gray-400 hover:text-gray-600 focus:outline-none" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Job Title -->
                        <div class="form-group">
                            <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="Title" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobTitle" name="Title" maxlength="100" />
                            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
                            <span id="remainingTitleChars" class="text-gray-500 text-xs">100 characters remaining</span>
                        </div>

                        <!-- Job Description -->
                        <div class="form-group">
                            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                            <textarea asp-for="Description" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobDescription" name="Description" maxlength="800"></textarea>
                            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
                            <span id="remainingDescriptionChars" class="text-gray-500 text-xs">800 characters remaining</span>
                        </div>

                        <!-- Employment Type -->
                        <div class="form-group">
                            <label asp-for="EmploymentTypeId" class="block text-sm font-medium text-gray-700"></label>
                            <select asp-for="EmploymentTypeId" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobEmploymentTypeId" name="EmploymentTypeId">
                                <option value="">-- Select Employment Type --</option>
                                @foreach (var type in EmploymentTypes)
                                {
                                    <option value="@type.EmploymentTypeId">@type.Name</option>
                                }
                            </select>
                            <span asp-validation-for="EmploymentTypeId" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Setup Type -->
                        <div class="form-group">
                            <label asp-for="SetupTypeId" class="block text-sm font-medium text-gray-700"></label>
                            <select asp-for="SetupTypeId" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobSetupTypeId" name="SetupTypeId">
                                <option value="">-- Select Setup Type --</option>
                                @foreach (var setup in SetupTypes)
                                {
                                    <option value="@setup.SetupTypeId">@setup.Name</option>
                                }
                            </select>
                            <span asp-validation-for="SetupTypeId" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Location -->
                        <div class="form-group">
                            <label asp-for="Location" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="Location" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobLocation" name="Location" />
                            <span asp-validation-for="Location" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Schedule -->
                        <div class="form-group">
                            <label class="block text-sm font-medium text-gray-700">Schedule</label>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label asp-for="Schedule.Days" class="block text-sm font-medium text-gray-700">Days</label>
                                    <input asp-for="Schedule.Days" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobScheduleDays" name="Schedule.Days" />
                                    <span asp-validation-for="Schedule.Days" class="text-red-600 text-sm"></span>
                                </div>
                                <div>
                                    <label asp-for="Schedule.Hours" class="block text-sm font-medium text-gray-700">Hours</label>
                                    <input asp-for="Schedule.Hours" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobScheduleHours" name="Schedule.Hours" />
                                    <span asp-validation-for="Schedule.Hours" class="text-red-600 text-sm"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Salary -->
                        <div class="form-group">
                            <label asp-for="Salary" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="Salary" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobSalary" name="Salary" />
                            <span asp-validation-for="Salary" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Year Level -->
                        <div class="form-group">
                            <label asp-for="YearLevelId" class="block text-sm font-medium text-gray-700"></label>
                            <select asp-for="YearLevelId" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobYearLevelId" name="YearLevelId">
                                <option value="">-- Select Year Level --</option>
                                @foreach (var yearLevel in YearLevels)
                                {
                                    <option value="@yearLevel.YearLevelId">@yearLevel.Name</option>
                                }
                            </select>
                            <span asp-validation-for="YearLevelId" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Departments -->
                        <div class="form-group">
                            <label asp-for="Departments" class="block text-sm font-medium text-gray-700"></label>
                            <select asp-for="Departments" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobDepartments" name="Departments" multiple>
                                @foreach (var department in Departments)
                                {
                                    <option value="@department.DepartmentId">@department.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Departments" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Skills -->
                        <div class="form-group">
                            <label asp-for="Skills" class="block text-sm font-medium text-gray-700"></label>
                            <select asp-for="Skills" class="form-control block w-full p-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" id="createJobSkills" name="Skills" multiple>
                                @foreach (var skill in Skills)
                                {
                                    <option value="@skill.SkillsId">@skill.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Skills" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-t-0">
                    <button type="button" class="btn btn-secondary text-gray-500 hover:text-gray-700 focus:outline-none" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary bg-primary-500 hover:bg-primary-600 text-white font-semibold py-2 px-4 rounded-lg">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
