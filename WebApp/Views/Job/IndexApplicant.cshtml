@model IEnumerable<Services.ServiceModels.JobViewModel>
@using Data.Models;

@{
    ViewData["Title"] = "Available Jobs";

    string GetEmploymentTypeColor(string employmentType)
    {
        return employmentType switch
        {
            "Part-time" => "#fdbf77",
            "Full-time" => "#54eba2",
            "Contract" => "#ee6d6b",
            "Internship" => "#82b8f1",
            _ => "#gray-300",
        };
    }

    // string GetSetupTypeBorderColor(string setupType)
    // {
    //     return setupType switch
    //     {
    //         "Remote" => "#82b8f1",
    //         "Face-to-Face" => "#54eba2",
    //         "Hybrid" => "#fdbf77",
    //         _ => "#gray-300",
    //     };
    // }
}

<div class="min-h-screen min-w-full mx-auto bg-[#F5F6F8] pt-16 text-gray-900">
    <div class="bg-[#7A1515] min-w-full py-4 shadow-sm flex justify-center items-center">
        <div class="flex items-center w-1/2 bg-white rounded-lg shadow-md px-2 py-1">
            <input type="text" name="searchQuery" placeholder="Search by job title, position, keyword..."
                   class="w-full py-2 px-2 text-gray-700 bg-transparent focus:outline-none" />
            <button class="flex items-center bg-gray-200 px-1 py-1 rounded-lg text-gray-700 hover:bg-gray-300 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 pr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.414-1.414l4.387 4.387a1 1 0 11-1.414 1.414l-4.387-4.387zM14 8a6 6 0 11-12 0 6 6 0 0112 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm">Search</span>
            </button>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 mt-6 flex gap-6">
        <!-- Filter Sidebar -->
        @await Html.PartialAsync("Filter")
        
        <!-- Job Listings Section -->
        <div class="w-full bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Recommended Jobs</h2>

            <div>
                @foreach (var job in Model)
                {
                    <div class="py-2">
                        <div class="p-1 bg-gray-100 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
                            <div class="px-3 py-2 bg-white rounded-xl">
                                <!-- Company and Date Created -->
                                <div class="flex justify-between pt-2 text-sm text-gray-600">
                                    <span>@job.Company.Name - @job.Location</span>
                                    <div class="flex items-center space-x-2">
                                        <span>
                                            @(string.IsNullOrEmpty(job.CreatedDate) ? "Date Not Available" : DateTime.Parse(job.CreatedDate).ToString("MMM dd, yyyy"))
                                        </span>

                                        <!-- Bookmark Button Placeholder -->
                                        <form method="post" asp-controller="Job" asp-action="Bookmark" asp-route-id="@job.JobId" class="ml-2">
                                            <button type="submit" class="text-gray-500 hover:text-gray-700 transition-colors px-2">
                                                <i class="fa-regular fa-bookmark"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <!-- Job Title, Employment Type, and Work Setup -->
                                <div class="flex items-center space-x-4">
                                    <div class="text-xl font-semibold text-[#7A1515]">@job.Title
                                        <span class="text-gray-900 px-2 py-1 rounded-md text-xs font-medium ml-1"
                                              style="background-color:@GetEmploymentTypeColor(job.EmploymentType.Name);">
                                            @job.EmploymentType.Name
                                        </span>

                                        <span class="text-gray-900 font-normal text-xs px-2 py-1 rounded-md border ml-1"
                                              style="border: 2px solid"> @job.SetupType.Name
                                        </span>
                                    </div>
                                </div>

                                <!-- Salary and Job Description -->
                                <div>
                                    <span class="text-sm text-gray-700 font-bold">$@job.Salary </span>
                                </div>
                                <p class="pt-2 text-sm text-gray-600">@job.Description</p>

                                <!-- Job Skills -->
                                <div class="flex flex-wrap space-x-2 mb-1">
                                    <span class="px-2 py-1 text-xs rounded-full border">Skill 1</span>
                                    <span class="px-2 py-1 text-xs rounded-full border">Skill 2</span>
                                    <span class="px-2 py-1 text-xs rounded-full border">Skill 3</span>
                                </div>

                                <div class="flex justify-between items-center mb-2">

                                    <!-- Job Match Percentage Placeholder -->
                                    <div class="flex items-center space-x-1 text-sm font-semibold text-gray-700">
                                        <span class="text-xs font-bold pr-1">Job Match:</span>
                                        <span class="px-2 py-1 text-xs text-green-600 border border-red-500 rounded-full">85%</span> <!--placeholder sheesh-->
                                    </div>

                                    <!-- Details and Application Button -->
                                    <div class="flex space-x-4">
                                        <button onclick="location.href='@Url.Action("JobDetails", new { id = job.JobId })'"
                                                class="px-4 py-2 rounded-md bg-gray-200 text-sm font-bold text-gray-700 hover:bg-gray-300 transition-colors">
                                            See Details
                                        </button>

                                        <button onclick="applyJobHandler('@job.JobId')"
                                                class="px-6 py-2 rounded-md bg-[#7A1515] text-white text-sm font-bold hover:bg-[#991b1b] transition-colors">
                                            Send Application
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/toastrNotification.js"></script>
    <script>
        function applyJobHandler(jobId) {
            toastr.success('Application submitted!');
        }
    </script>
}
