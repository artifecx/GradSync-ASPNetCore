@model Services.ServiceModels.JobServiceModel
@using Data.Models;

<div class="modal fade" id="unarchiveJobModal" tabindex="-1" role="dialog" aria-labelledby="unarchiveJobModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-2xl font-bold text-[#7A1515]" id="unarchiveJobModalLabel">Unarchive Job</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeUnarchiveJobModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body max-h-[calc(96vh-200px)] flex-grow overflow-y-auto">
                <form id="unarchiveJobForm" class="rounded-lg p-2">
                    @Html.AntiForgeryToken()
                    <div class="space-y-6">
                        <div class="flex-1">
                            <label asp-for="AvailableSlots" class="block text-sm font-medium text-gray-700"></label>
                            <input asp-for="AvailableSlots" class="block w-full rounded-lg border border-gray-300 p-2 text-sm" type="number" value="@Model.AvailableSlots" placeholder="5" id="unarchiveJobSlotsAvailable" name="AvailableSlots" />
                            <span asp-validation-for="AvailableSlots" class="text-sm text-red-500"></span>
                        </div>
                    </div>
                    <input asp-for="JobId" type="hidden" value="@Model.JobId" />
                    <input asp-for="PostedById" type="hidden" value="@Model.PostedById" />
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="rounded-md bg-[#6c757d] px-3 py-2 font-medium text-white hover:bg-[#939BA2]" id="cancelUnarchiveJob" data-dismiss="modal">Cancel</button>
                <button type="submit" class="rounded-md bg-[#7A1515] px-3 py-2 font-medium text-white hover:bg-[#A53D3D]" onclick="submitUnarchiveJob()">Unarchive</button>
            </div>
        </div>
    </div>
</div>
