<div class="flex">
    <input type="text"
           name="search"
           class="border-r-0 rounded rounded-l-md rounded-r-none border border-[#7A1515] bg-white px-4 py-2 text-gray-800 shadow-sm transition duration-300 ease-in-out hover:border-[#A53D3D] focus:outline-none focus:ring-2 focus:ring-[#A53D3D]"
           placeholder="@ViewData["Placeholder"]"
           value="@ViewData["SearchValue"]" />
    <button type="submit"
            class="border-l-0 rounded rounded-l-none rounded-r-md border border-[#7A1515] bg-[#7A1515] px-4 font-semibold text-white hover:bg-[#A53D3D]">
        <i class="fa fa-search"></i>
    </button>
</div>