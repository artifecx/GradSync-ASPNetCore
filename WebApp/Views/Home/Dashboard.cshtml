<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Ehrm watta sigma need backend integration. Note: placeholders only -->
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2>Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-6">
            <h5>Total Applications</h5>
            <canvas id="applicationsChart"></canvas> <!-- Bar Chart -->
        </div>

        <div class="col-md-6">
            <h5>User Roles Distribution</h5>
            <canvas id="rolesChart"></canvas> <!-- Pie Chart -->
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h5>Monthly Active Users</h5>
            <canvas id="activeUsersChart"></canvas> <!-- Line Chart -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bar Chart for Total Applications
        var ctx1 = document.getElementById('applicationsChart').getContext('2d');
        var applicationsChart = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Total Applications',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Pie Chart for User Roles Distribution
        var ctx2 = document.getElementById('rolesChart').getContext('2d');
        var rolesChart = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Admin', 'Recruiter', 'Applicant'],
                datasets: [{
                    label: 'User Roles',
                    data: [3, 15, 25], // These are sample data
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
                    hoverBackgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                }]
            },
        });

        // Line Chart for Monthly Active Users
        var ctx3 = document.getElementById('activeUsersChart').getContext('2d');
        var activeUsersChart = new Chart(ctx3, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Monthly Active Users',
                    data: [50, 60, 70, 180, 190, 230],
                    fill: false,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            }
        });
    </script>
}
