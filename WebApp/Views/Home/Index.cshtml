<!-- Applicant Homepage -->
@model List<Services.ServiceModels.JobViewModel>
@{
    ViewData["Title"] = "GradSync";
}

<div class="mt-12 min-h-screen bg-[#F1F2F4]">
    <div class="mx-12 mt-6 flex">
        <div class="mx-12 mt-12 flex justify-between">

            <!-- Left Content -->
            <div class="mt-10 w-3/4">
                <div class="mb-2 text-5xl font-bold leading-tight text-gray-900">
                    Discover jobs that suit your
                    <span class="text-[#7A1515]">interest & skills</span> today!
                </div>
                <div class="mb-2 mr-12 pr-12 text-justify font-normal tracking-tight text-gray-600">
                    <p class="text-gray-600">
                        Unlock your potential with GradSync. We connect you with opportunities that align with your
                        expertise and passions, making the job search process simple and efficient. Whether you're
                        looking for a new career path or a step up in your current field, we are here to help you
                        find the perfect match. Start your journey with us and find the job that fits you best.
                    </p>
                </div>
                <a href="@Url.Action("GetAllJobsApplicant", "Job")">
                    <button class="rounded-lg bg-[#7A1515] px-3 py-2 font-semibold text-white hover:bg-[#991b1b]">
                        Job Search
                    </button>
                </a>
            </div>

            <!-- Right Image -->
            <div class="mt-1 flex w-1/2 justify-end">
                <img src="/img/hero.png" alt="Illustration" class="full">
            </div>
        </div>
    </div>

    <!-- Featured Jobs Section -->
    <div class="mx-12">
        <div class="mx-12 mb-2 flex justify-between">
            <div class="text-xl font-semibold leading-tight text-gray-700">Featured Jobs</div>
        </div>

        <div class="max-w-[calc(100vw-200px)] mx-12 mb-4 flex-grow overflow-x-auto text-left">
            <div>@await Html.PartialAsync("FeaturedJobs", Model)</div>
        </div>
    </div>
</div>

<div id="tempDataContainer" data-success="@TempData["SuccessMessage"]" data-error="@TempData["ErrorMessage"]"></div>