@model Services.ServiceModels.AccountServiceModel

<div class="modal fade" id="registerUserModal" tabindex="-1" role="dialog" aria-labelledby="registerUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title font-bold text-2xl text-[#7A1515]" id="registerUserModalLabel">Sign Up</h5>
                <button type="button" class="close text-gray-500 hover:text-gray-700" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Registration Form -->
            <form id="registerUserForm" method="post" action="/Account/Register">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label class="block font-normal mb-1" for="email">Email <span class="text-red-500">*</span></label>
                        <input type="text" id="email" asp-for="Email" placeholder="juandelacruz@gradsync.com"
                               class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-[#991b1b] hover:border-[#991b1b]" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="mb-4">
                        <label class="block font-normal mb-1" for="name">Full Name <span class="text-red-500">*</span></label>
                        <input type="text" id="name" asp-for="Name" placeholder="Juan Dela Cruz"
                               class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-[#991b1b] hover:border-[#991b1b]" />
                        <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="mb-4">
                        <label class="block font-normal mb-1" for="password">Password <span class="text-red-500">*</span></label>
                        <input type="password" id="password" asp-for="Password" placeholder="******"
                               class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-[#991b1b] hover:border-[#991b1b]" />
                        <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="mb-4">
                        <label class="block font-normal mb-1" for="confirmpassword">Confirm Password <span class="text-red-500">*</span></label>
                        <input type="password" id="confirmpassword" asp-for="ConfirmPassword" placeholder="******"
                               class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-[#991b1b] hover:border-[#991b1b]" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="mb-4 flex items-center">
                        <input type="checkbox" id="roleCheckbox" asp-for="AsRecruiter" value="true" class="h-4 w-4 text-[#991b1b] focus:ring-2 focus:ring-[#991b1b]" />
                        <label for="roleCheckbox" class="ml-2 block font-normal">Apply as recruiter</label>
                    </div>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer flex justify-between items-center">
                    <button type="submit" id="registerButton" disabled
                            class="bg-[#7A1515] hover:bg-[#A53D3D] text-white font-semibold py-2 px-4 rounded flex items-center disabled:bg-gray-400 disabled:cursor-not-allowed">
                        Sign Up
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account.js"></script>
}
