@model LoginViewModel
@using static Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "ForgotPassword";
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="container d-flex justify-content-center align-items-center" style="height:calc(100vh - 100px);">
    <div class="row w-100 justify-content-center align-items-center">
        <div class="col-5">
            <div class="text-center text-color-white">
                <h2>How can <b>we</b> help <b>you</b>?</h2>
                <p class="mb-5">Welcome to GradSync</p>
            </div>
            <div class="card rounded-3 text-color">
                <div class="card-body p-md-5 mx-md-4">
                    <h4 class="mb-3 poppins-medium">Reset Your Password</h4>
                    <p class="mb-4">Your request will be sent to admins, who will contact you via email.</p>
                    <form method="post" asp-action="PostForgotPassword" id="loginForm">
                        <div class="form-outline mb-4">
                            <label class="form-label poppins-medium" for="form2Example11">Email Address</label>
                            <input type="text" id="form2Example11" class="form-control"
                                   asp-for="Email" placeholder="Input your Email Address"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="text-center pt-1 pb-1 d-flex flex-column align-items-center">
                            <button class="btn btn-primary btn-block request-btn font-weight-bold mb-2" type="submit">
                                Send Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}   