@model LoginViewModel
@using static Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        .has-error input {
            border-color: #dc3545;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25em;
            display: block;
        }
    </style>
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";

    await Html.RenderPartialAsync("_RegisterModal", new Services.ServiceModels.UserViewModel());
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="container d-flex justify-content-center align-items-center" style="height:calc(100vh - 100px);">
    <div class="row w-100 justify-content-center align-items-center">
        <div class="col-5">
            <div class="text-center text-color-white">
                <h2>How can <b>we</b> help <b>you</b>?</h2>
                <p class="mb-5">Welcome to GradSync</p>
            </div>
            <div class="card rounded-3 text-color">
                <div class="card-body p-md-5 mx-md-4">
                    <form method="post" action="/Account/Login" id="loginForm">
                        <div class="form-outline mb-4 @(ViewData.ModelState["Email"] != null ? "has-error" : "")">
                            <label class="form-label poppins-medium" for="emailInput">Email Address <span>*</span></label>
                            <input type="text" class="form-control" asp-for="Email" id="emailInput" placeholder="" />
                        </div>
                        <div class="form-outline mb-4 @(ViewData.ModelState["Password"] != null ? "has-error" : "")">
                            <label class="form-label poppins-medium" for="passwordInput">Password <span>*</span></label>
                            <input type="password" class="form-control" asp-for="Password" id="passwordInput" placeholder="" />
                            @if (TempData["ErrorMessageLogin"] != null)
                            {
                                <span class="text-danger">@(TempData["ErrorMessageLogin"])</span>
                            }
                        </div>
                        <div class="text-center pt-1 pb-1 d-flex flex-column align-items-center">
                            <button class="btn btn-primary btn-block login-btn font-weight-bold mb-2" type="submit" id="loginButton" disabled>
                                Sign in
                            </button>
                            <div>
                                <a href="" class="text-muted" data-toggle="modal" data-target="#registerUserModal">Register</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="tempDataContainer" data-success="@TempData["SuccessMessage"]" data-error="@TempData["ErrorMessage"]"></div>

@section scripts {
    <script src="~/js/toastrNotification.js"></script>
    <script src="~/js/account.js"></script>
}
