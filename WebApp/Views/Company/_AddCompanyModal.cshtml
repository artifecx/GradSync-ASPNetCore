@model Services.ServiceModels.CompanyViewModel

<div class="modal fade" id="addCompanyModal" tabindex="-1" role="dialog" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCompanyModalLabel">Add Company</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="addCompanyForm">
                    <!-- Company Name -->
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" id="addCompanyName" name="Name" maxlength="100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Company Email -->
                    <div class="form-group">
                        <label asp-for="ContactEmail" class="control-label"></label>
                        <input asp-for="ContactEmail" type="email" class="form-control" id="addCompanyEmail" name="ContactEmail" maxlength="100" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>

                    <!-- Company Number -->
                    <div class="form-group">
                        <label asp-for="ContactNumber" class="control-label"></label>
                        <input asp-for="ContactNumber" type="number" class="form-control" id="addCompanyNumber" name="ContactNumber" maxlength="20" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <!-- Company Address -->
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" id="addCompanyAddress" name="Address" maxlength="100" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Company Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" id="addCompanyDescription" name="Description" maxlength="800"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" onclick="submitAddCompany()">Add</button>
            </div>
        </div>
    </div>
</div>
