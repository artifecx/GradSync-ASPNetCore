@model Services.ServiceModels.CompanyViewModel

<div class="modal fade" id="addCompanyModal" tabindex="-1" role="dialog" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCompanyModalLabel" style="font-size: 1.75rem; letter-spacing: 2px; font-weight: 600; text-transform: uppercase; color: #7A1515;">
                    Add New Company
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body p-4">
                <form id="addCompanyForm">
                    <!-- Company Name -->
                    <div class="form-group">
                        <label asp-for="Name" class="control-label font-weight-bold">Company Name</label>
                        <input asp-for="Name" class="form-control" id="addCompanyName" name="Name" maxlength="100" placeholder="Enter company name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Company Email -->
                    <div class="form-group">
                        <label asp-for="ContactEmail" class="control-label font-weight-bold">Company Email</label>
                        <input asp-for="ContactEmail" type="email" class="form-control" id="addCompanyEmail" name="ContactEmail" maxlength="100" placeholder="Enter company email" />
                        <span asp-validation-for="ContactEmail" class="text-danger small"></span>
                    </div>

                    <!-- Company Number -->
                    <div class="form-group">
                        <label asp-for="ContactNumber" class="control-label font-weight-bold">Company Phone Number</label>
                        <input asp-for="ContactNumber" type="text" class="form-control" id="addCompanyNumber" name="ContactNumber" maxlength="20" placeholder="Enter phone number" />
                        <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                    </div>

                    <!-- Company Address -->
                    <div class="form-group">
                        <label asp-for="Address" class="control-label font-weight-bold">Company Address</label>
                        <input asp-for="Address" class="form-control" id="addCompanyAddress" name="Address" maxlength="100" placeholder="Enter company address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Company Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label font-weight-bold">Company Description</label>
                        <textarea asp-for="Description" class="form-control" id="addCompanyDescription" name="Description" maxlength="800" rows="4" placeholder="Enter company description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="rounded bg-[#7A1515] px-4 py-2 font-semibold text-white hover:bg-[#A53D3D]" onclick="submitAddCompany()">
                    Add Company
                </button>
            </div>
        </div>
    </div>
</div>
