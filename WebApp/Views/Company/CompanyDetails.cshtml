@model Services.ServiceModels.CompanyViewModel

@{
    ViewData["Title"] = "Company Details";
}

<div class="d-flex justify-content-between nav-header">
    <a href="#" class="back-button m-2 text-black">
        <h2 class="font-weight-bold">
            <i class="fa-solid fa-arrow-left mx-2"></i>
        </h2>
    </a>

    <div class="flex items-center">
        <h4 class="text-xl font-semibold">
          <a href="javascript:void(0);" onclick="enableEditMode()" class="fas fa-edit ml-2 text-[#7A1515] hover:text-[#A53D3D]"></a>

        </h4>
    </div>
</div>

<div class="min-h-screen bg-[#F5F6F8] px-4 text-black md:px-12">
    <div class="container mx-auto rounded-lg bg-white p-6 shadow-lg">
        <!-- Header Section -->
        <div class="flex flex-col items-center justify-between md:flex-row md:items-start">
            <!-- Left Side -->
            <div class="flex items-center">
                <div class="md:ml-6">
                    <!-- Company Name and Details -->
                    <div class="flex space-x-3">
                        <h1 class="text-3xl font-bold md:text-4xl">@Model.Name</h1>
                    </div>
                    <h2 class="mt-2 text-lg font-medium md:text-xl">@Model.Address</h2>
                    <text class="w-20 rounded-lg text-center font-semibold uppercase">
                        Contact: @Model.ContactNumber
                    </text>
                </div>
            </div>
        </div>
        <div class="mb-6 mt-4 border-b"></div>

        <div class="grid-cols-1 grid gap-6 md:grid-cols-2">
            <!-- Company Information -->
            <div class="rounded-lg border p-4">
                <h3 class="mb-4 text-2xl font-bold">Company Information</h3>
                <ul class="space-y-4">
                    <li>
                        <strong>Description:</strong> @Model.Description
                    </li>
                    <li>
                        <strong>Address:</strong> @Model.Address
                    </li>
                    <li>
                        <strong>Contact Number:</strong> @Model.ContactNumber
                    </li>
                </ul>
            </div>

            <!-- Recruiter Information -->
            <div class="rounded-lg border p-4">
                <h3 class="mb-4 text-2xl font-bold">Recruiter Information</h3>
                @if (Model.Recruiters != null && Model.Recruiters.Any())
                {
                    <ul class="space-y-4">
                        @foreach (var recruiter in Model.Recruiters)
                        {
                            <li>
                                <strong>Recruiter Email:</strong> @recruiter.User.Email
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-gray-600">No recruiters assigned to this company.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- TempData for Notifications -->
<div id="tempDataContainer" data-success="@TempData["SuccessMessage"]" data-error="@TempData["ErrorMessage"]"></div>

@section Scripts {
    <script>
        document.querySelector('.back-button').addEventListener('click', function (event) {
            event.preventDefault();
            window.history.back();
        });
    </script>
}
